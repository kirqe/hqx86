<div class="row">
	<div class="medium-9 columns content">		  
    <dl class="sub-nav">
      <dt>Filter:</dt>
      <dd><%= bar_link "All", builds_path(:t => "all") %></dd>
      <dd><%= bar_link "Mini", builds_path(:t => "mini") %></dd>
      <dd><%= bar_link "Mid", builds_path(:t => "mid") %></dd>
      <dd><%= bar_link "Pro", builds_path(:t => "pro") %></dd>
      <dd><%= bar_link "Laptop", builds_path(:t => "laptop") %></dd>  
    </dl>

<% if @builds.present? %>
    <% @builds.each do |build| %>    
		<ul class="inline-list items" style="	border-left: 3px solid <%= lab(build.b_type) %>">
      <li><%= link_to build_path(build) do %><span class="conf grayed"><%= build.spec %></span>    <% end %></li>

			<li><span style="color: <%= lab(build.b_type) %>"><%= build.b_type %></span></li>
	  	<li><span class="im"><%= build.im %></span></li>      
	  	<li><span class="stat_success">[<%= build.status %>]</span></li>      
	  	<li><span class="label info radius">~$<%= build.cost %></span></li>    	<li><span class="title"><%= link_to "#{build.name}", build_path(build) %></span></li>
		</ul>
    <% end %>
    
    <%= paginate @builds %>
    <% else %>
    <div class="panel radius b30">
     <h4>Nothing's found for <%= "#{params[:search]}" %></h4>
    </div>
    <% end %>
  </div>
  
  <div class="medium-3 columns right_panel build-content show-for-large-up">      
      <%= form_tag(builds_path, method: "get") do%>
      <%= text_field_tag :search, params[:search], placeholder: "search", class: "search"%>
      <% end %>
