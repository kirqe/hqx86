<p id="notice"><%= notice %></p>
<div class="row">
	<div class="medium-8 columns build-content">	
    <h4 class="subheader"><%= @build.name %>: <%= @build.spec %></h4>
    
	  <ul class="inline-list items" style="	border-left: 3px solid #F1684D;">
			<li><span class="title"><%= @build.name %></span></li>
			<li><span class="mid"><%= @build.b_type %></span></li>
	  	<li><span class="conf grayed"><%= @build.spec %></span></li>
	  	<li><span class="cost"><%= @build.im %></span></li>
	  	<li><span class="stat_success ">[<%= @build.status %>]</span></li>
	  	<li><span class="cost">~$<%= @build.cost %></span></li>
		</ul>
    
		<div id="specs">
			<ul class="item_show no-bullet">
				<li><b>Motherboard:</b> <%= @build.mb %></li>
				<li><b>CPU(s):</b> <%= @build.cpu %></li>
				<li><b>Memory:</b> <%= @build.ram %></li>
				<li><b>GPU(s):</b> <%= @build.gpu %></li>
				<li><b>HDD/SSD(s):</b> <%= @build.disk %></li>		
				<li><b>OS</b> <%= @build.os %></li>
			</ul>
		</div>
    
    <div class="installation_notes">
      <%= @build.body %>
    </div>
  </div>
</div>