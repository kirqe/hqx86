- if builds.present?
  - builds.each do |build|
    - cache(build) do
      .col-lg-6
        %article.album
          %section.album-info
            %h4
              = link_to build_path(build) do
                %span= build.spec
            %ul
              %li{:style => "color: #{lab(build.b_type)}; font-weight: bold;"}= build.b_type
              %li= build.im
              %li.label.label-success.status{:style => "background-color: #{lab(build.status)}"}= build.status
              %li
                \~$#{build.cost}
              %li= time_ago_in_words(build.created_at) + ' ago'
  %br/
  .text-center
    = paginate builds
- else
  .col-sm-12.text-center
    %h3 Nothing here, yet ¯\_(ツ)_/¯
    But you can check #{link_to "Posts", posts_path} or #{link_to "Showcase section", showcases_path}
