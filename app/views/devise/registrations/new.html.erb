<div class="large-3 large-centered columns center-v">
  <div class="login-box">
    <div class="row">
    <h4>Sign up</h4>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


        <div class="form-inputs">
          <%= f.input :email, required: true, label: false, autofocus: true, placeholder: "email"  %>
          <%= f.input :password, required: true, label: false, placeholder: "password", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true, label: false, placeholder: "password confirmation" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "button tiny expand"  %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
