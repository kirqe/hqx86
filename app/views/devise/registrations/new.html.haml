.row
  .au-form
    %h4 Sign up
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      %div{:class => "form-group #{"has-error" if f.object.errors.include?(:username)}"}
        .input-group
          .input-group-addon
            %i.fa.fa-user
          = f.input_field :username, class:"form-control", required: true, label: false, autofocus: true, placeholder: "username"
        %span.help-block
          = f.object.errors[:username].join(", ")
      %div{:class => "form-group #{"has-error" if f.object.errors.include?(:email)}"}
        .input-group
          .input-group-addon
            %i.fa.fa-envelope
          = f.input_field :email, class:"form-control", required: true, label: false, autofocus: false, placeholder: "email"
        %span.help-block
          = f.object.errors[:email].join(", ")
      %div{:class => "form-group #{"has-error" if f.object.errors.include?(:password)}"}
        = f.input_field :password, class:"form-control", required: true, label: false, placeholder: "password", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
        %span.help-block
          = f.object.errors[:password].join(", ")
      %div{:class => "form-group #{"has-error" if f.object.errors.include?(:password_confirmation)}"}
        = f.input_field :password_confirmation, class:"form-control", required: true, label: false, placeholder: "password confirmation"
        %span.help-block
          = f.object.errors[:password_confirmation].join(", ")
      .form-actions
        = f.button :submit, "Sign up", class: "btn btn-primary btn-block"
    = render "devise/shared/links"
