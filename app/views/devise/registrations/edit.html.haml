.row
  .au-form
    %h4
      Edit #{resource_name.to_s.humanize}
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = f.input :username, required: true, label: false, placeholder: "username", autofocus: true, disabled: true
      = f.input :email, required: true, label: false, placeholder: "email", autofocus: true, disabled: true
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %p
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      = f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", label: false, placeholder: "password", required: false
      = f.input :password_confirmation, label: false, placeholder: "password confirmation", required: false
      = f.input :current_password, hint: "we need your current password to confirm your changes", label: false, placeholder: "current password", required: true
      .form-actions
        = f.button :submit, "Update", class: "btn btn-primary btn-block"
    = link_to "home page", root_path
