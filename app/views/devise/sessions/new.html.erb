


<div class="row">

  <div class="col-sm-3 col-sm-offset-4">

    <h4>Log in</h4>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), id:"form_login") do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
			<div class="form-group">
				
				<div class="input-group">
					<div class="input-group-addon">
						<i class="fa fa-envelope"></i>
					</div>
					<%= f.input :email, required: false, label: false, autofocus: true, placeholder: "email", class:"form-control"  %>
          <!-- <input type="text" class="form-control" name="username" id="username" placeholder="Username" autocomplete="off" /> -->
				</div>
				
			</div>
      
			<div class="form-group">
				
				<div class="input-group">
					<div class="input-group-addon">
						<i class="fa fa-key"></i>
					</div>
					<%= f.input :password, required: false, label: false, placeholder: "password", class:"form-control" %>
				  <!-- <input type="text" class="form-control" name="username" id="username" placeholder="Username" autocomplete="off" /> -->
				</div>
				
			</div>
      
      <%# f.input :email, required: false, label: false, autofocus: true, placeholder: "email"  %>
      <%# f.input :password, required: false, label: false, placeholder: "password" %>
          
      <% if devise_mapping.rememberable? -%>      
      <div class="checkbox">
        <%= f.label :remember_me do %>
        <%= f.check_box :remember_me, as: :boolean %>
        Remember me
        <% end -%>
      </div>

      
      <% end -%>
    </div>
        
    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
    </div>
    <% end %>
      
    <%= render "devise/shared/links" %>
  </div>  
</div>

