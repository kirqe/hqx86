<div class="large-3 large-centered columns center-v">
  <div class="login-box">
    <div class="row">
      <h4>Log in</h4>

       <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: false, label: false, autofocus: true, placeholder: "email"  %>
          <%= f.input :password, required: false, label: false, placeholder: "password" %>
          <div class="row">
            <% if devise_mapping.rememberable? -%>
              <div class="large-12 columns">
                <div class="checkbox">
                	<%= f.label :remember_me do %>
          			  	<%= f.check_box :remember_me, as: :boolean %>
          					Remember me
          					<% end -%>
          				</div>
         	 		</div>      
            <% end -%>
          </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "button tiny expand" %>
        </div>
      <% end %>
      
      <%= render "devise/shared/links" %> 
  	</div>
  </div>
</div>

